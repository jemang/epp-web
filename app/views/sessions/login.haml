= form_for @user, url: sessions_path, html: {class: 'form-signin'} do |f|
  = render 'depp/shared/errors', object: f.object
  - error_class = f.object.errors.any? ? 'has-error' : ''
  %div{class: error_class}
    = f.text_field :tag, class: 'form-control', placeholder: t('username'), autocomplete: 'off'
    = f.password_field :password, class: 'form-control', placeholder: t('password')
  %button.btn.btn-lg.btn-primary.btn-block{:type => 'submit'}= t('log_in')
